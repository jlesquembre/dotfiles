{
  "diagnostic.errorSign": "⬥",
  "diagnostic.warningSign": "⬥",
  "diagnostic.hintSign": "⬥",
  "diagnostic.infoSign": "⬥",
  "diagnostic.displayByAle": true,

  "coc.preferences.colorSupport": false,

  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "json",
    "jsonc",
    "css",
    "scss",
    "html",
    "yaml",
    "markdown",
    "scala"
  ],

  "suggest.timeout": 4000,

  "coc.source.file.ignoreHidden": false,

  "suggest.maxCompleteItemCount": 99,

  "emmet.includeLanguages": { "javascript": "html", "typescript": "html" },

  "pairs.disableLanguages": ["clojure"],

  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },

  "snippets.extends": {
    "markdown.mdx": "markdown"
  },

  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },

    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  },

  "java.format.enabled": true,

  "prettier.proseWrap": "always",
  "java.format.settings.url": "/home/jlle/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml"
}
